<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dragon.dao.MailSendDAO">
    <resultMap id="baseMap" type="Mail">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="context" property="context" jdbcType="LONGVARCHAR"/>
        <!--<result column="to_mail" property="toMail" jdbcType="VARCHAR"/>-->
        <!--<result column="cc_mail" property="ccMail" jdbcType="VARCHAR"/>-->
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="add" parameterType="Mail">
        INSERT INTO mail_send(title,context,to_mail,cc_mail,status,created_time)
        VALUES (#{title},#{context},
            #{toMailStr},
            #{ccMailStr},
        #{status},now())
    </insert>
</mapper>